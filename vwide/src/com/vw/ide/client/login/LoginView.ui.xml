<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.google.gwt.widget.client"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" 
	xmlns:gwt="urn:import:com.google.gwt.user.cellview.client">

	<ui:image field='gradient' src='../images/gradient_bg_dark.png'
		repeatStyle='Horizontal' />
	<ui:style>
	.outer {
		border-left: 1px solid #999;
		border-bottom: 1px solid #999;
		cursor: pointer;
		cursor: hand;
	}
	
	@sprite .header {
		gwt-image: 'gradient';
		background-color: #d3d6dd;
		table-layout: fixed;
		width: 100%;
		height: 100%;
	}
	
	.header {
		font-weight: bold;
		text-shadow: #fff 0 2px 2px;
		padding: 2px 0 1px 10px;
		border-top: 1px solid #999;
		border-bottom: 1px solid #999;
		vertical-align: middle;
	}
	
	.panelCenteredAndFramed {
		margin-right: auto;
		margin-left: auto;
		border: 1px solid #666;
		vertical-align: middle;
		text-align: center;
		background-color: cornsilk;
	}
	
	.cccc {
		margin: 20% 10% 10%;
	}
	.btn {
	}
	</ui:style>



	<g:SimplePanel styleName="{style.cccc}">
		<g:FlowPanel styleName="{style.panelCenteredAndFramed}"
			height="202px" width="380px">
			<g:DockLayoutPanel unit='PX' height="200" width="380">
				<g:north size='30.0'>
					<g:Label ui:field='header' styleName='{style.header}'
						height="1"> Authorization Panel
					</g:Label>
				</g:north>
			</g:DockLayoutPanel>
			<g:FlowPanel height="200" width="398">
				<g:LayoutPanel height="54px" width="100pct" />
				<g:LayoutPanel height="48px" width="100pct">
					<g:layer left="13.0pct" width="100px" top="10px" height="18px">
						<g:Label text="User name" horizontalAlignment="ALIGN_RIGHT" />
					</g:layer>
					<g:layer left="43.0pct" width="150px" top="3px" height="30px">
						<g:TextBox ui:field="userNameField" />
					</g:layer>
				</g:LayoutPanel>
				<g:LayoutPanel height="48px" width="100pct">
					<g:layer left="13.0pct" width="100px" top="10px" height="18px">
						<g:Label text="Password" horizontalAlignment="ALIGN_RIGHT" />
					</g:layer>
					<g:layer left="43.0pct" width="150px" top="3px" height="30px">
						<g:PasswordTextBox ui:field="passwordField" />
					</g:layer>
				</g:LayoutPanel>
				<g:LayoutPanel height="40px" width="100%" styleName="{style.btn}">
					<g:layer left="42.0pct" width="81px" top="10px" height="29px">
						<g:Button ui:field="loginProceed" >Login</g:Button>
					</g:layer>
				</g:LayoutPanel>
			</g:FlowPanel>

		</g:FlowPanel>
	</g:SimplePanel>







</ui:UiBinder> 