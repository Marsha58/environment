<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.google.gwt.widget.client">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.login {
		font-family: sans-serif;
		background-color: beige;
	}
	
	.loginTitle {
		font-size: 24px;
		font-family: sans-serif;
		background-color: beige;
	    margin-left: auto;
    	margin-right: auto;
    	margin-top: 24px;
    	border-top: 0px solid #666;
		border-right: 0px solid #666;
		border-left: 0px solid #999;
		border-bottom: 0px solid #999;
	}
	
	.panelCentered {
		margin-right: auto;
		margin-left: auto;
		border-top: 0px solid #666;
		border-right: 0px solid #666;
		border-left: 0px solid #999;
		vertical-align: middle;
		text-align: center;
		background-color: beige;
  	}

	.panelCenteredAndFramed {
		margin-right: auto;
		margin-left: auto;
		border-top: 1px solid #666;
		border-right: 1px solid #666;
		border-left: 1px solid #666;
		border-bottom: 1px solid #666;
		vertical-align: middle;
		text-align: center;
		background-color: beige;
  	}
  	
	.outer {
		height: 100%;
		width: 100%;
		margin: 10% auto auto;
		vertical-align: middle;
		background-color: white;
    }    	
    .loginBack {
		background-color: red;

	}
	</ui:style>
		<g:FlowPanel styleName="{style.panelCenteredAndFramed}" height="300px" width="600px">
			<g:TextArea text="Virtual World Modeling Environment" textAlignment="ALIGN_CENTER" readOnly="true" ui:field="loginCaption" styleName="{style.loginTitle}" alignment="CENTER" height="20%" width="70%"/>
			<g:LayoutPanel height="52px" width="100pct">
				<g:layer left="20%" width="100px" top="10px" height="18px">
					<g:Label text="User name"/>
				</g:layer>
				<g:layer left="40%" width="150px" top="3px" height="30px">
					<g:TextBox ui:field="userNameField"/>
				</g:layer>
			</g:LayoutPanel>
			<g:LayoutPanel height="52px" width="100pct">
				<g:layer left="20%" width="100px" top="10px" height="18px">
					<g:Label text="Password"/>
				</g:layer>
				<g:layer left="40%" width="150px" top="3px" height="30px">
					<g:PasswordTextBox ui:field="passwordField"/>
				</g:layer>
			</g:LayoutPanel>
			<g:LayoutPanel height="50px" width="100%">
				<g:layer left="42.0pct" width="81px" top="10px" height="29px">
					<w:TextButton ui:field="loginProceed">Login</w:TextButton>
				</g:layer>
			</g:LayoutPanel>
		</g:FlowPanel>
</ui:UiBinder> 