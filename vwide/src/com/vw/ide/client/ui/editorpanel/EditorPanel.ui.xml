<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
	<ui:image field='gradient' src='../../images/gradient_bg_dark.png'
		repeatStyle='Horizontal' />

	<ui:style>
	.outer {
		border-left: 1px solid #999;
		border-bottom: 1px solid #999;
		cursor: pointer;
		cursor: hand;
	}
	
	@sprite .header {
		gwt-image: 'gradient';
		background-color: #d3d6dd;
		table-layout: fixed;
		width: 100%;
		height: 100%;
	}
	
	.header {
		font-weight: bold;
		text-shadow: #fff 0 2px 2px;
		padding: 2px 0 1px 10px;
		border-top: 1px solid #999;
		border-bottom: 1px solid #999;
		vertical-align: middle;
	}
	</ui:style>

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins1">
		<ui:attributes top="1" right="1" bottom="1" left="1" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
		field="mainRow">
		<ui:attributes width="1" height="1" margins="{margins1}" />
	</ui:with>

	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="shortTextTabConfig">
		<ui:attributes text="Main_file.vwml" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
		field="toolbarRow">
		<ui:attributes width="1" height="-1" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.core.client.resources.ThemeStyles.ThemeAppearance"
		field="theme" />

