<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" 
	xmlns:f="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid">
	<ui:style>
	.body {
		line-height: 150%;
		padding: 20px 40px 20px 10px;
		font-family: 'Times New Roman', Times, serif;
	}
	
	.detail {
		border: none;
		background-color: white;
	}
	
	.important {
		font-weight: bold;
	}
	
	.sep {
		margin-top: 20px;
	}
	</ui:style>

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins1">
		<ui:attributes top="1" right="1" bottom="1" left="1" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
		field="mainRow">
		<ui:attributes width="1" height="1" margins="{margins1}" />
	</ui:with>
	
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="shortTextTabConsole">
		<ui:attributes text="Info" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="shortTextTabSearch">
		<ui:attributes text="Search" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabErrors">
		<ui:attributes text="Errors" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabSearch">
		<ui:attributes text="Search" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabCommunication">
		<ui:attributes text="Console" />
	</ui:with>

	<ui:with type="com.sencha.gxt.widget.core.client.container.MarginData"
		field="centerData" />
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="southData" />

  	<ui:with type="com.sencha.gxt.core.client.ValueProvider" field="valueProvider" />  
	<ui:with type="com.sencha.gxt.data.shared.ListStore" field="searchStore" />
	<ui:with type="com.sencha.gxt.widget.core.client.grid.ColumnModel" field="searchColumnModel" />
	<ui:with type="com.sencha.gxt.widget.core.client.grid.GridView" field="searchGridView" />

	<gxt:TabPanel width="100%" height="100%" addStyleNames="margin-10"
		borders="false">
		<gxt:child config="{shortTextTabConsole}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='infoConsole'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{shortTextTabSearch}">
			<gxt:ContentPanel resize="true">
				<grid:Grid ui:field="searchResult" store="{searchStore}" cm="{searchColumnModel}" view="{searchGridView}" />
				<!--   <form:ListField ui:field="searchResult" store="{searchStore}" /> -->
			</gxt:ContentPanel>
		</gxt:child>
		<gxt:child config="{longTextTabCommunication}" >
			<container:BorderLayoutContainer borders="false" resize="true" >
				<container:center layoutData="{centerData}">
					<gxt:ContentPanel headingText="to Virtual World" resize="true" borders="false">
						<container:SimpleContainer ui:field="outgoingConsole"
							layoutData="{mainRow}" />
					</gxt:ContentPanel>
				</container:center>
				<container:south layoutData="{southData}" >
					<gxt:ContentPanel headingText="from Virtual World" 	resize="true" borders="false">
						<container:SimpleContainer ui:field="incomingConsole"
							layoutData="{mainRow}" />
					</gxt:ContentPanel>
				</container:south>
			</container:BorderLayoutContainer>

		</gxt:child>
	</gxt:TabPanel>


</ui:UiBinder> 