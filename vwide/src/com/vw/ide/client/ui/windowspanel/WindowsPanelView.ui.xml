<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
	<ui:style>
	.body {
		line-height: 150%;
		padding: 20px 40px 20px 10px;
		font-family: 'Times New Roman', Times, serif;
	}
	
	.detail {
		border: none;
		background-color: white;
	}
	
	.important {
		font-weight: bold;
	}
	
	.sep {
		margin-top: 20px;
	}
	</ui:style>

	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="shortTextTabDebug">
		<ui:attributes text="Debug" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="shortTextTabProblems">
		<ui:attributes text="Problems" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabErrors">
		<ui:attributes text="Errors" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabSearch">
		<ui:attributes text="Search" />
	</ui:with>


	<gxt:TabPanel width="100%" height="100%" addStyleNames="margin-10">
		<gxt:child config="{shortTextTabDebug}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodyDebug'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{shortTextTabProblems}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodyProblems'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{longTextTabErrors}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodyErrors'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{longTextTabSearch}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodySearch'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
	</gxt:TabPanel>



