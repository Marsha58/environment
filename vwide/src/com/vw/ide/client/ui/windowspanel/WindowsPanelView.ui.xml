<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
	<ui:style>
	.body {
		line-height: 150%;
		padding: 20px 40px 20px 10px;
		font-family: 'Times New Roman', Times, serif;
	}
	
	.detail {
		border: none;
		background-color: white;
	}
	
	.important {
		font-weight: bold;
	}
	
	.sep {
		margin-top: 20px;
	}
	</ui:style>

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins1">
		<ui:attributes top="1" right="1" bottom="1" left="1" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
		field="mainRow">
		<ui:attributes width="1" height="1" margins="{margins1}" />
	</ui:with>
	
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="shortTextTabDebug">
		<ui:attributes text="Debug" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="shortTextTabProblems">
		<ui:attributes text="Problems" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabErrors">
		<ui:attributes text="Errors" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabSearch">
		<ui:attributes text="Search" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig"
		field="longTextTabConsole">
		<ui:attributes text="Console" />
	</ui:with>

	<ui:with type="com.sencha.gxt.widget.core.client.container.MarginData"
		field="centerData" />
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="southData" />

	<gxt:TabPanel width="100%" height="100%" addStyleNames="margin-10"
		borders="false">
		<gxt:child config="{shortTextTabDebug}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodyDebug'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{shortTextTabProblems}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodyProblems'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{longTextTabErrors}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodyErrors'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{longTextTabSearch}">
			<g:ScrollPanel>
				<g:HTML styleName='{style.body}' ui:field='bodySearch'
					wordWrap='true' />
			</g:ScrollPanel>
		</gxt:child>
		<gxt:child config="{longTextTabConsole}" >
			<container:BorderLayoutContainer ui:field="con" borders="false" resize="true" >
				<container:center layoutData="{centerData}">
					<gxt:ContentPanel headingText="Messages from server" ui:field='editorContentPanel' resize="true" borders="false">
						<container:SimpleContainer ui:field="serverLogContainer"
							layoutData="{mainRow}" />
					</gxt:ContentPanel>
				</container:center>
				<container:south layoutData="{southData}" >
					<gxt:ContentPanel headingText="Messages to server" 	resize="true" borders="false">
						<g:ScrollPanel >
							<g:HTML styleName='{style.body}' ui:field='bodyConsoleOut'
								wordWrap='true' />
						</g:ScrollPanel>
					</gxt:ContentPanel>
				</container:south>
			</container:BorderLayoutContainer>

		</gxt:child>
	</gxt:TabPanel>


</ui:UiBinder> 