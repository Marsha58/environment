<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:w="urn:import:com.google.gwt.widget.client"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" 
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:f="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="westMargins">
		<ui:attributes top="0" right="0" bottom="0" left="0" />
	</ui:with>

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins0">
		<ui:attributes top="0" right="0" bottom="0" left="0" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData"
		field="boxLayoutDataMargins0">
		<ui:attributes margins="{margins0}" />
	</ui:with>
	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins0500">
		<ui:attributes top="0" right="5" bottom="0" left="0" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData"
		field="boxLayoutDataMargins0500">
		<ui:attributes margins="{margins0500}" />
	</ui:with>

	<ui:with type="com.sencha.gxt.core.client.util.Padding" field="padding5">
		<ui:attributes top="5" right="5" bottom="5" left="5" />
	</ui:with>

	<ui:with type="com.sencha.gxt.widget.core.client.container.MarginData"
		field="outerData" />
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="westData">
		<ui:attributes size="250" margins="{westMargins}"
			collapsible="false" split="true" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.container.MarginData"
		field="centerData" />

	<ui:with type="com.sencha.gxt.widget.core.client.container.MarginData"
		field="westCenterData" />
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData"
		field="westSouthData">
		<ui:attributes size="40" margins="{westMargins}"
			collapsible="false" split="false" />
	</ui:with>
	
 	<ui:with type="com.sencha.gxt.data.shared.ListStore" field="listStoreCategories" />
  	<ui:with type="com.sencha.gxt.widget.core.client.grid.ColumnModel" field="columnModelCategories" />
  	<ui:with type="com.sencha.gxt.widget.core.client.grid.GridView" field="gridViewCategories" />

 	<ui:with type="com.sencha.gxt.data.shared.ListStore" field="listStoreFringes" />
  	<ui:with type="com.sencha.gxt.widget.core.client.grid.ColumnModel" field="columnModelFringes" />
  	<ui:with type="com.sencha.gxt.widget.core.client.grid.GridView" field="gridViewFringes" />

	<container:SimpleContainer height="500px">
		<container:child layoutData="{outerData}">
			<container:BorderLayoutContainer
				borders="true">
				<container:west layoutData="{westData}">
					<gxt:ContentPanel headingText="Category">

						<container:BorderLayoutContainer
							borders="false">
							<container:center layoutData="{westCenterData}">
								<container:SimpleContainer>
									<grid:Grid ui:field="gridCategories" store="{listStoreCategories}" cm="{columnModelCategories}" view="{gridViewCategories}"
									      />
								</container:SimpleContainer>
							</container:center>
							<container:south layoutData="{westSouthData}">
								<container:HBoxLayoutContainer
									padding="{padding5}" hBoxLayoutAlign="MIDDLE" pack="END">
									<container:child layoutData="{boxLayoutDataMargins0500}">
										<button:TextButton ui:field="buttonRefreshCategory" 
											text="refresh" width="60" />
									</container:child>
									<container:child layoutData="{boxLayoutDataMargins0500}">
										<button:TextButton ui:field="buttonAddCategory"
											text="add" width="60" />
									</container:child>
									<container:child layoutData="{boxLayoutDataMargins0500}">
										<button:TextButton ui:field="buttonEditCategory" text="edit" width="60" />
									</container:child>
									<container:child layoutData="{boxLayoutDataMargins0}">
										<button:TextButton ui:field="buttonDeleteCategory" text="delete" width="60" />
									</container:child>
								</container:HBoxLayoutContainer>
							</container:south>
						</container:BorderLayoutContainer>
					</gxt:ContentPanel>
				</container:west>
				<container:center layoutData="{centerData}">
					<gxt:ContentPanel headingText="Fringes">
						<container:BorderLayoutContainer
							borders="false">
							<container:center layoutData="{westCenterData}">
								<container:SimpleContainer>
									<grid:Grid ui:field="gridFringes" store="{listStoreFringes}" cm="{columnModelFringes}" view="{gridViewFringes}" />
								</container:SimpleContainer>
							</container:center>
							<container:south layoutData="{westSouthData}">
								<container:HBoxLayoutContainer
									padding="{padding5}" hBoxLayoutAlign="MIDDLE" pack="END">
									<container:child layoutData="{boxLayoutDataMargins0500}">
										<button:TextButton ui:field="buttonRefreshFringe" 
											text="refresh" width="60" />
									</container:child>									
									<container:child layoutData="{boxLayoutDataMargins0500}">
										<button:TextButton ui:field="buttonAddFringe" text="add" width="60" />
									</container:child>
									<container:child layoutData="{boxLayoutDataMargins0500}">
										<button:TextButton ui:field="buttonMoveFringe" text="move" width="60" />
									</container:child>
									<container:child layoutData="{boxLayoutDataMargins0500}">
										<button:TextButton ui:field="buttonEditFringe" text="edit" width="60" />
									</container:child>
									<container:child layoutData="{boxLayoutDataMargins0}">
										<button:TextButton ui:field="buttonDeleteFringe" text="delete" width="60" />
									</container:child>
								</container:HBoxLayoutContainer>
							</container:south>
						</container:BorderLayoutContainer>

					</gxt:ContentPanel>
				</container:center>
			</container:BorderLayoutContainer>
		</container:child>
	</container:SimpleContainer>

</ui:UiBinder> 