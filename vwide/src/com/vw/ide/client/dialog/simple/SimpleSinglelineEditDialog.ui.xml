<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"  xmlns:w="urn:import:com.google.gwt.widget.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.dialogBackground {
			background-color: beige;
		}
		
	</ui:style>
	
	<g:FlowPanel styleName="{style.dialogBackground}" width="350px" height="90px" ui:field="dialogMainPanel">
		<g:LayoutPanel height="50%" width="100%">
			<g:layer left="3%" right="70%" top="15px" height="20px">
				<g:Label horizontalAlignment="ALIGN_LEFT" ui:field="editLabelField"></g:Label>
			</g:layer>
			<g:layer left="32%" right="3%" top="10px" height="30px">
				<g:TextBox ui:field="editField"></g:TextBox>
			</g:layer>
		</g:LayoutPanel>
		<g:LayoutPanel height="50%" width="100%">
			<g:layer left="168px" right="102px" top="6px" height="30px">
				<w:TextButton ui:field="cancel">Cancel</w:TextButton>
			</g:layer>
			<g:layer left="259px" right="11px" top="6px" height="30px">
				<w:TextButton ui:field="ok">Ok</w:TextButton>
			</g:layer>
		</g:LayoutPanel>
		
	</g:FlowPanel>	
</ui:UiBinder> 